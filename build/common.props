<Project ToolsVersion="15.0">
  <Import Project="version.props" />
  
  <PropertyGroup>
    <ProjectParentDirectory>$([System.IO.Path]::GetDirectoryName('$(MSBuildProjectDirectory)'))</ProjectParentDirectory>
    <ProjectParentDirectoryName>$([System.IO.Path]::GetFileName('$(ProjectParentDirectory)'))</ProjectParentDirectoryName>
  </PropertyGroup>

  <Import Project="sourcelink.props" Condition="'$(ProjectParentDirectoryName)' == 'src'" />

  <ItemGroup>
    <PackageReference Include="AsyncFixer" Version="1.1.5" PrivateAssets="All" />
  </ItemGroup>
  
  <PropertyGroup>
    <Product>Foundatio.Parsers</Product>
    <Description>A lucene style query parser that is extensible and allows additional syntax features.</Description>
    <Copyright>Copyright (c) 2017 Foundatio.  All rights reserved.</Copyright>
    <Authors>FoundatioFx</Authors>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <WarningsAsErrors>true</WarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageOutputPath>$(SolutionDir)artifacts\</PackageOutputPath>

    <PackageReleaseNotes>https://github.com/FoundatioFx/Foundatio.Parsers/releases</PackageReleaseNotes>
    <PackageIconUrl>https://raw.githubusercontent.com/FoundatioFx/Foundatio.Parsers/master/media/foundatio-icon.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/FoundatioFx/Foundatio.Parsers</PackageProjectUrl>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/FoundatioFx/Foundatio.Parsers</RepositoryUrl>
    <VersionSuffix Condition="'$(VersionSuffix)' != '' AND '$(BuildNumber)' != ''">$(VersionSuffix)-$(BuildNumber)</VersionSuffix>
  </PropertyGroup>
</Project>
